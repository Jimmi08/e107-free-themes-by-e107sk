<?xml version="1.0" encoding="utf-8"?>
<e107Theme name="Solid" version="2.4.0" date="2020-10-19" compatibility="2.3.0">
	<author name ="Jimako" email="" url="https://www.e107sk.com" />
	<summary>SOLID - Bootstrap 3 Theme</summary>
	<description>Original Solid theme is a 7 pages theme ideal for web agencies and freelancers. Uses Font Awesome, Masonry Javascript, PrettyPhoto lightbox and nice hover effects thanks Codrops. With e107 it can be multipage site for any purpose.</description>
	<category>generic</category>
	<plugins>
		<plugin name='gallery' url='core' />
    	<plugin name='faqs' url='core' />
		<plugin name='social' url='core' />
		<plugin name='featurebox' url='core' />
        <plugin name='masthead' url='{e_THEME}solid/plugins/masthead.zip' />
	</plugins>
	<keywords>
		<word>bootstrap</word>
		<word>clean</word>
	</keywords>
	<libraries>
		<library name="bootstrap" version="3" scope="all"/>
		<library name="fontawesome" version="4"  scope="all"/>
	</libraries>
	<screenshots>
		<image>preview_frontend.png</image>
		<image>preview_responsive.png</image>
	</screenshots>
	<stylesheets>
		<css file="style.css" name="Default"  />
	</stylesheets>
	<layouts>
		<layout name='homepage' title='Solid home' default='false'>
			<custompages>FRONTPAGE</custompages>	
		</layout>
		<layout name='portfolio' title='Full portfolio page'  >
			<custompages>/book/portfolio</custompages>
		</layout>
		<layout name='full' title='Full width page'  >
			<custompages>login about</custompages> 
		</layout>
		<layout name='sidebar_right' title='Blog sidebar-right' default='true' >
			<custompages>/news</custompages>	
		</layout>  
		<layout name='solid_project' title='Single project page'  >  
 			<custompages>portfolio</custompages>    
		</layout>     
		<layout name='solid_contact' title='Full contact page'  >  
 			<custompages>/contact</custompages>    
		</layout> 
	</layouts>
    <themePrefs>
		<pref name='login_iframe'></pref>
		<pref name='login_hide_logo'></pref>
		<pref name='login_hide_sitename'></pref>
		<pref name='loginbox_width'></pref>
		<pref name='loginform_width'></pref>
		<pref name='fpw_iframe'></pref>	
	</themePrefs>
</e107Theme>